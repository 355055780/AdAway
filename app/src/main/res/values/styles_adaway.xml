        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryVariant">@color/lightPrimaryVariant</item>
        <item name="colorOnPrimary">@color/lightOnPrimary</item>
        <item name="colorSecondary">@color/lightPrimary</item>
        <item name="colorSecondaryVariant">@color/lightPrimaryVariant</item>
        <item name="colorOnSecondary">@color/lightOnPrimary</item>
        <item name="android:statusBarColor" ns1:targetApi="21">@color/lightPrimary</item>
        <!--<item name="preferenceTheme">@style/ThemeOverlay.AppCompat.Light</item>-->
